<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Mirza Adnan Hossain"
            android:textSize="30sp"
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cProgrammingBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/c_programming"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/javaBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Java Programming"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/algoBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Algorithm"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/dataBasebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/database"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/addBt"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:text="@string/add_courses"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewBt"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:text="Courses Taken"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:id="@+id/showCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>